@using Microsoft.Marketplace.SaaS.SDK.Services.Models
@model List<KnownUsersViewModel>
@{
    ViewData["Title"] = "Plans";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<div class="container">
    <div class="">
        <div class="card-body">

            <div id="myModal">
                @if (Model != null && Model.Count() > 0)
                {
                    <div class="table-responsive mt20">
                        <table class="table table-bordered dt-responsive cm-table" width="100%" cellspacing="0">
                            <thead class="cm-table-head">
                                <tr>
                                    <th>User Email</th>
                                    <th>Action</th>

                                </tr>
                            </thead>
                            <tbody>
                                @{ var i = 0;}
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-left">
                                            @item.KnownUsers
                                        </td>
                                        <td class="text-left cm-ellipsis">
                                            <div class="nav-item dropdown">
                                                <a class="nav-link dropdown cm-link-button" href="#" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><i class="fa fa-bars"></i></a>
                                                <div class="dropdown-menu" aria-labelledby="dropdown01">
                                                    <a class="dropdown-item cm-dropdown-option" data-target="#myModal" onclick="fnDeleteKnownUser('@item.KnownUsersId',' @item.KnownUsers')">Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {

                    <div class="cm-panel-default mt40">
                        <div class="p-3 mr420">
                            <p>
                                You do not have any Known Users!
                            </p>
                        </div>
                    </div>

                }
            </div>
        </div>
    </div>
</div>


<script>

    //Update Subscription Status
    function fnDeleteKnownUser(Id, KnownUsers) {
        var parm = { knownUsersId: Id, knownUserEmail: KnownUsers };
        swal({
            text: "Are you sure you want to Remove the user?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willChange) => {
                if (willChange) {
                    $.ajax({
                        type: "GET",
                        url: "/KnownUsers/RemoveKnownUser",
                        data: parm,
                        success: function (result) {
                            if (result != 0) {
                                window.location.reload();
                            } else {
                                window.location.reload();
                            }
                        }
                    });
                }
            });

    }


</script>

